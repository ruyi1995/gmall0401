<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper SYSTEM "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!-- 接口全路径-->
<mapper namespace="com.atguigu.gmall0401.gmall0401.manage.mapper.SpuSaleAttrMapper">
    <!-- id 方法名称 -->
    <select id="selectSpuSaleAttrList"  resultMap="spuSaleAttrMap">
    select sa.id ,sa.spu_id, sa.sale_attr_name,sa.sale_attr_id,
    sv.id sale_attr_value_id,
    sv.sale_attr_value_name
    from spu_sale_attr sa inner join spu_sale_attr_value  sv
    on  sa.spu_id=sv.spu_id and sa.sale_attr_id=sv.sale_attr_id
    where  sa.spu_id=#{0}
</select>
    <!--resultMap：返回结果集
    id：唯一标识
    type:返回结果值类型
    autoMapping ：自动映射  -->
    <resultMap id="spuSaleAttrMap" type="com.atguigu.gmall0401.bean.SpuSaleAttr" autoMapping="true">
        <!--id表示主键
        property：实体类的属性名
        column：表中的字段 \
        <id property="id" column="id"></id>-->
        <!--result表示普通字段-->
        <id property="id" column="id"></id>
        <!--collection：配置表中一对多的属性
        ofType：返回集合类型类路径 -->
        <collection property="spuSaleAttrValueList" ofType="com.atguigu.gmall0401.bean.SpuSaleAttrValue"
                    autoMapping="true">

            <id property="id" column="sale_attr_value_id"></id>
        </collection>
    </resultMap>
</mapper>